{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Yarn Install",
      "command": "yarn install"
    },
    {
      "name": "Force-Update TypeScript",
      "command": "npm install --global --force typescript"
    }
  ],
  "tasks": {
    "text-to-image": {
      "runAtStart": true,
      "name": "Text-To-Image",
      "command": "yarn sandbox-text-to-image dev --port 3000",
      "preview": {
        "port": 3000
      }
    }
  }
}
