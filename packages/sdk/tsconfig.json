{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,

    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },

    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
